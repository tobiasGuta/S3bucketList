{
  "manifest_version": 3,
  "name": "S3Scanner-Firefox",
  "version": "1.0.0",
  "description": "Detects and probes public S3 buckets from web traffic.",
  "author": "S3Scanner Team",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "S3Scanner",
    "default_icon": {
      "16": "icons/icon-16.png",
      "19": "icons/icon-19.png",
      "32": "icons/icon-32.png",
      "38": "icons/icon-38.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "s3scanner@example.com",
      "strict_min_version": "109.0"
    }
  }
}
